{
    "version": "2.0.0",
    "tasks": [
        {
            "type": "shell",
            "label": "Build PostgreSQL C++ Program",
            "command": "C:/mingw64/bin/g++.exe",
            "args": [
                "-fdiagnostics-color=always",
                "-std=c++17",
                "-g",
                "${file}",

                // PostgreSQL headers
                "-I", "C:/msys64/mingw64/include",

                // PostgreSQL libs
                "-L", "C:/msys64/mingw64/lib",
                "-lpq",

                "-o", "${fileDirname}/${fileBasenameNoExtension}.exe"
            ],
            "options": {
                "cwd": "${workspaceFolder}"
            },
            "problemMatcher": ["$gcc"],
            "group": {
                "kind": "build",
                "isDefault": true
            }
        }
    ]
}
